<%- include("layouts/header.ejs") %>
<main>
  <div class="vegetables_section layout_padding">
    <div class="container">
      <div class="image_2"><i class="fa-solid fa-burger"></i></div>
      <h1 class="about_taital">Our Burgers</h1>
      <p class="lorem_text">
        Burgers originated from Hamburg, Germany, but became widely popular in
        the United States.
      </p>
      <div class="vegetables_section_2 layout_padding">
        <div class="row">
          <% products.forEach(product => { %>
          <div class="col-sm-6 col-md-4 col-lg-3">
            <div class="box_section wow animated fadeInRight">
              <div class="image_4">
                <img src="<%= product.image_path %>" />
              </div>
              <h2 class="dolor_text"><%= product.product_price %> TK</h2>

              <a href="/product/<%= product.id %>"
                ><h2 class="dolor_text"><%= product.product_title %></h2>
                <p class="tempor_text"><%= product.product_description %></p>
              </a>

              <form action="/cart/add" method="POST" class="text-center">
                <input
                  type="hidden"
                  name="productId"
                  value="<%= product.id %>"
                />
                <button type="submit" class="btn btn-lg cusBuyBtn">
                  Buy Now
                </button>
              </form>
            </div>
          </div>
          <% }); %>
        </div>
      </div>
    </div>
  </div>
</main>

<%- include("layouts/footer.ejs") %>
