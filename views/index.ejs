                <div class="icon_text">
                  <i class="fa-solid fa-utensils"></i><br />
                  <span>Delicious</span>
                </div>
                <div class="icon_text">
                  <i class="fa-solid fa-droplet"></i><br />
                  <span>Fresh</span>
                </div>
                <div class="icon_text">
                  <i class="fa-brands fa-envira"></i><br />
                  <span>Organic</span>
                </div>
              </div>
              <div class="buyAndRead_bt">
