    </div>
  </div>
  <!--our burgers section end -->

  <!--choose section start -->
  <div class="choose_section layout_padding">
    <div class="container">
      <div class="image_2">
        <i class="fa-solid fa-burger"></i>
      </div>
      <h1 class="about_taital">Why Choose Us</h1>
      <div class="image_3">
        <img class="mycustomAnimat wow animated pulse" src="images/about.png" />
      </div>
      <p class="lorem_text">
        A burger is a delicious sandwich consisting of a grilled patty, usually
        beef, placed in a bun with toppings like lettuce, cheese, and sauces.
      </p>
      <div class="read_bt_1"><a href="#">Get Details</a></div>
    </div>
  </div>
  <!--choose section end -->

  <!--contact section start -->
  <div class="contact_section layout_padding">
    <div class="container">
      <div class="image_2">
        <i class="fa-solid fa-burger"></i>
      </div>
      <h1 class="about_taital">Get in Touch</h1>
      <div class="row">
        <div class="col-md-6">
          <div class="mail_sectin">
            <input
              type="text"
              class="email-bt"
              placeholder="Enter Your Name"
              name="Name"
            />
            <input
              type="text"
              class="email-bt"
              placeholder="Enter Your Email"
              name="Name"
            />
            <input
              type="text"
              class="email-bt"
              placeholder="Enter Your Phone Number"
              name="Name"
            />
            <textarea
              class="massage-bt"
              placeholder="Enter Your Massage"
              rows="5"
              id="comment"
              name="Massage"
            ></textarea>
            <div class="send_bt"><a href="#">Send</a></div>
          </div>
        </div>
        <div class="col-md-6">
          <div class="map_main">
            <div class="map-responsive">
              <iframe
                src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3652.2386387691345!2d90.37282297451715!3d23.738868089220503!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x3755b8caa7e60837%3A0xf47efcf6f49b50c5!2sSultan&#39;s%20Dine%20-%20Dhanmondi!5e0!3m2!1sen!2sbd!4v1740072319407!5m2!1sen!2sbd"
                width="600"
                height="482"
                frameborder="2"
                style="border: 0; width: 100%"
                allowfullscreen
              ></iframe>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <script src="/socket.io/socket.io.js"></script>
  <script>
    const socket = io();

    document.addEventListener("DOMContentLoaded", function () {
      const socket = io();
      const messagesDiv = document.getElementById("messages");

      function addClassesToMessages() {
        var messages = messagesDiv.querySelectorAll("p");
        messages.forEach(function (message, index) {
          if (index % 2 === 0) {
            message.classList.add("even");
            message.classList.remove("odd");
          } else {
            message.classList.add("odd");
            message.classList.remove("even");
          }
        });
      }

      socket.on("message", (message) => {
        messagesDiv.innerHTML += `<p>${message}</p>`;
        addClassesToMessages();
      });

      function sendMessage() {
        const messageInput = document.getElementById("messageInput");
        const message = messageInput.value;
        socket.emit("message", message);
        messageInput.value = "";
      }

      const openChatButton = document.getElementById("openChatButton");
      const closeChatButton = document.getElementById("closeChatButton");
      const chatContainer = document.getElementById("chatContainer");

      openChatButton.addEventListener("click", () => {
        chatContainer.style.display = "block";
      });

      closeChatButton.addEventListener("click", () => {
        chatContainer.style.display = "none";
      });

      const sendMessageButton = document.getElementById("sendMessageButton");
      sendMessageButton.addEventListener("click", sendMessage);
    });
  </script>
</main>
